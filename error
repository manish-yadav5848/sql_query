CASE 
    WHEN part_age LIKE '%.%'
    THEN 
      CONCAT(
        TRIM(LEADING '0' FROM CAST(SUBSTRING_INDEX(part_age, '.', 1) AS INT)),
        '.',
        LPAD(CAST(SUBSTRING_INDEX(part_age, '.', -1) AS DECIMAL(10,2)), 2, '0')
      )
    WHEN part_age RLIKE '^0?[0-9]+\\.[0-9]+?$'
    THEN TRIM(TRAILING '.' FROM part_age)
    ELSE part_age
  END AS converted_value
