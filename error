SELECT CAST(SUBSTRING_INDEX(a, '.', 1) AS INT) || '.' || CAST(SUBSTRING_INDEX(a, '.', -1) AS DECIMAL(10,2)) AS converted_value
FROM your_table

SELECT CAST(SUBSTRING_INDEX('046.6', '.', 1) AS INT) || '.' || LPAD(REVERSE(SUBSTRING_INDEX(REVERSE('046.6'), '.', -1)), 2, '0') AS converted_value
FROM your_table

